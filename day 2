-------------------------------------------------------------
PRINT  VALUES IN DESCENDING ORDER
#include <iostream>


using namespace std;


int main() 
{

int i;
 
 for(i=10;i>=1;i--)

   printf(" %d ",i);


}

--------------------------------------------------------------
PRINT ALPHABETS AND THEIR ASCII VALUES IN DESCENDING ORDER
#include <iostream>


using namespace std;


int main() 
{

int i;
 
 for(i=122;i>=97;i--)

   printf(" %c=%d ",char(i),i);


}

